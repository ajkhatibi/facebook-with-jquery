<div class="page-header" style="margin-left: 150px;">
  <h1>Movies</h1>
  
</div>

<div class="panel panel-default">
	<div class="panel panel-body">
	<div class="input-group">
  		<span class="input-group-addon" id="movieSearch">
  			<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  		</span>
  		<input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1">
	</div>
	</div>
</div>

<button type="button" class="btn btn-default">Search</button>

<div class="panel panel-default">
	<div class="panel-heading">
    	<h2 class="panel-title">Movies playing</h2>
    </div>

	<div class="panel-body">
    <ul>
		{{#each movie}}

        <li>{{this.movieName}}</li>
        <li>{{this.movieTime}}</li>
        <li>{{this.location}}</li>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="burgerID" value="{{this.id}}">
                    <button type="submit">I want to watch this</button>
                </form>


		{{/each}}
    </ul>
      </div>
</div>


    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Ready to eat!</h2>
      </div>

      <div class="panel-body">
        <ul>
          {{#each burger}}
              {{#unless this.devoured}}

              <li>{{this.burger_name}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="burgerID" value="{{this.id}}">
                    <button type="submit">eat</button>
                </form>
              </li>


            {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
