 <form action="/friend-book/register" method="POST">
	  <input id="name" name="name" type="text" class="form-control-1" placeholder="Enter Name" aria-describedby="basic-addon1">

	  <input id="username" name="username" type="text" class="form-control-2" placeholder="Enter Username" aria-describedby="basic-addon2">

	  <input id="password" name="password" type="password" class="form-control-3" placeholder="Enter Password" aria-describedby="basic-addon3">
